<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVisu"
    android:layout_width="wrap_content"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageCategorieVisu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app2:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/titreVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageCategorieVisu" />

        <TextView
            android:id="@+id/lieuVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titreVisu"
            android:layout_toEndOf="@id/imageCategorieVisu" />

        <ImageView
            android:id="@+id/imageNewIncidentVisu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app2:srcCompat="@drawable/logo_notif" />

        <TextView
            android:id="@+id/urgenceVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imageCategorieVisu" />

        <TextView
            android:id="@+id/dateVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageCategorieVisu" />

        <ImageView
            android:id="@+id/photoVisu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="0dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>