<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVisu"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:descendantFocusability="blocksDescendants"
    android:clickable="false"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clickable="false">


        <ImageView
            android:id="@+id/imageCategorieVisu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app2:srcCompat="@mipmap/ic_launcher"
            android:clickable="false"/>

        <TextView
            android:id="@+id/titreVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageCategorieVisu"
            android:clickable="false"/>

        <TextView
            android:id="@+id/lieuVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titreVisu"
            android:layout_toEndOf="@id/imageCategorieVisu"
            android:clickable="false"/>

        <ImageView
            android:id="@+id/imageNewIncidentVisu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app2:srcCompat="@drawable/logo_notif"
            android:clickable="false"/>

        <TextView
            android:id="@+id/urgenceVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imageCategorieVisu"
            android:clickable="false"/>

        <TextView
            android:id="@+id/dateVisu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageCategorieVisu"
            android:clickable="false"/>

        <ImageView
            android:id="@+id/photoVisu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/boutonSupprimer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>