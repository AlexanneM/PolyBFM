<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageCategorieVisu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app2:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titreVisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageCategorieVisu"
        android:text="COUCOU TITRE"/>

    <TextView
        android:id="@+id/lieuVisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titreVisu"
        android:layout_toEndOf="@id/imageCategorieVisu"
        android:text="COUCOU LIEU"/>

    <TextView
        android:id="@+id/urgenceVisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageCategorieVisu"
        android:text="COUCOU URGENCE"/>

    <TextView
        android:id="@+id/dateVisu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/urgenceVisu"
        android:text="COUCOU DATE"/>

    <ImageView
        android:id="@+id/photoVisu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/dateVisu"
        app2:srcCompat="@drawable/appareil_photo"
        android:layout_above="@id/boutonSupprimer"/>

    <ImageButton
        android:id="@+id/boutonSupprimer"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app2:srcCompat="@drawable/poubelle"/>

    <ImageView
        android:id="@+id/imageNewIncidentVisu"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>