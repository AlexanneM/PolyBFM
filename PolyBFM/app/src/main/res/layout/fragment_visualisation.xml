<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:id="@+id/cardVisu"
        android:layout_width="wrap_content"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">


            <ImageView
                android:id="@+id/imageCategorieVisu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app2:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/titreVisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/imageCategorieVisu"
                android:text="TITRE" />

            <TextView
                android:id="@+id/lieuVisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/imageNewIncidentVisu"
                android:text="LIEU" />

            <ImageView
                android:id="@+id/imageNewIncidentVisu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app2:srcCompat="@drawable/logo_notif" />

            <TextView
                android:id="@+id/urgenceVisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/imageCategorieVisu"
                android:text="URGENCE" />

            <TextView
                android:id="@+id/dateVisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/imageCategorieVisu"
                android:text="DATE" />

            <ImageView
                android:id="@+id/photoVisu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/urgenceVisu"
                android:layout_centerHorizontal="true"
                app2:srcCompat="@mipmap/ic_launcher" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>